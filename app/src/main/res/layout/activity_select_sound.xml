<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.addAlarm.sound.SelectSoundActivity">

    <TextView
        android:id="@+id/add_new_sound_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_sound"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/application_sounds_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/application_sounds"
        app:layout_constraintTop_toBottomOf="@+id/add_new_sound_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/application_sounds_text_view"
        app:layout_constraintLeft_toLeftOf="parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>